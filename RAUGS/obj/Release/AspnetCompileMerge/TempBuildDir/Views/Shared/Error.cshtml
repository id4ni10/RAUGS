@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Erro";
}

<h1 class="text-danger">Erro.</h1>
<h2 class="text-danger">Ocorreu um erro ao processar a solicitação.</h2>

<p>
    Controller: <b>@Model.ControllerName</b><br />
    Action: <b>@Model.ActionName</b><br />
    Exception: <b>@Model.Exception.GetType().FullName</b><br />
    Message: <b>@Model.Exception.Message</b><br />
    StackTrace: <b>@Model.Exception.StackTrace</b><br />
</p>